#!/bin/sh
set -e

case "$1" in
  configure)
    addgroup --force-badname --system _ngcp-api
    adduser www-data _ngcp-api
    adduser faxserver _ngcp-api
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument '$1'" >&2
    exit 1
  ;;
esac

#DEBHELPER#

exit 0
